<UserControl x:Class="WorldEditor.Views.MiniMap"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="200">
    <StackPanel Grid.Row="0">
        <Label HorizontalContentAlignment="Center">Mini Map</Label>
        <Canvas Height="200" Background="Black">
            <Rectangle Width="50" Height="50" Canvas.Left="15" Canvas.Top="25" Stroke="White"/>
        </Canvas>
    </StackPanel>
</UserControl>
