<UserControl x:Class="WorldEditor.Views.ObjectTool"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label
            Grid.Row="0" Grid.ColumnSpan="2"
            HorizontalContentAlignment="Center"
            Content="Object Tool"/>
        <ListView
            Grid.Row="1" Grid.ColumnSpan="2"
            ItemsSource="{Binding Breeds}"
            DisplayMemberPath="Id"
            SelectedItem="{Binding SelectedBreed}"/>
        <Label Grid.Row="2" Grid.Column="0">Brush Size:</Label>
        <ComboBox
            Grid.Row="2" Grid.Column="1"
            ItemsSource="{Binding BrushSizes}"
            SelectedItem="{Binding BrushSize}"/>
    </Grid>
</UserControl>
