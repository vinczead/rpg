<UserControl x:Class="WorldEditor.Views.RegionTabs"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WorldEditor.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <TabControl ItemsSource="{Binding Items}" SelectedItem="{Binding SelectedItem}" DisplayMemberPath="Id">
        <TabControl.ContentTemplate>
            <DataTemplate>
                <UserControl>
                    <Canvas Background="Black" x:Name="mapCanvas" />
                </UserControl>
            </DataTemplate>
        </TabControl.ContentTemplate>

    </TabControl>
</UserControl>
